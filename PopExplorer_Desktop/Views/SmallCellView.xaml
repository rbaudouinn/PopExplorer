             Text="{Binding CurrentSmallCell.Nombre, Mode=Default}"
             materialDesign:HintAssist.Hint="{Binding CurrentSmallCell.NetworkElementType, Mode=Default}" 
             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
             DockPanel.Dock="Left" 
             HorizontalAlignment="Stretch"
             FontFamily="Century Gothic"
             FontWeight="Normal"
             FontSize="14"
             Foreground="#0066C5"                           
             Width="auto"
             MinWidth="50"
             Height="auto"
             Margin="5"
             Padding="5"
             TextAlignment="Left"
             VerticalAlignment="Center"
             IsReadOnly="True"/>

