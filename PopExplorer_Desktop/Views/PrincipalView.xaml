                     FontSize="14"
                     Foreground="#0066C5"                           
                     Width="auto"
                     MinWidth="50"
                     Height="auto"
                     Margin="5"
                     Padding="5"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     IsReadOnly="True"/>

            <TextBox Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="1"
                     Text="{Binding CurrentPop.Latitud, Mode=OneWay}"
                     materialDesign:HintAssist.Hint="Latitud" 
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     DockPanel.Dock="Left" 
                     HorizontalAlignment="Stretch"
