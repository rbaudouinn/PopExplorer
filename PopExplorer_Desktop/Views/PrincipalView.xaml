                     Foreground="#0066C5"                           
                     Width="auto"
                     MinWidth="50"
                     Height="auto"
                     Margin="5"
                     Padding="5"
                     TextAlignment="Right"
                     VerticalAlignment="Center"
                     IsReadOnly="True"/>

            <TextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="1"
                     Text="{Binding CurrentPop.Longitud, Mode=OneWay}"
                     materialDesign:HintAssist.Hint="Longitud" 
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     DockPanel.Dock="Left" 
                     HorizontalAlignment="Stretch"
                     FontFamily="Century Gothic"
                     FontWeight="Normal"
                     FontSize="14"
                     Foreground="#0066C5"                           
                     Width="auto"
                     MinWidth="50"
                     Height="auto"
                     Margin="5"
                     Padding="5"
                     TextAlignment="Right"
                     VerticalAlignment="Center"
                     IsReadOnly="True"/>

            <TextBox Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2"
                     Text="{Binding CurrentPop.LatitudLongitud, Mode=OneWay}" 
                     materialDesign:HintAssist.Hint="Latitud,Longitud" 
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     DockPanel.Dock="Left" 
                     HorizontalAlignment="Stretch"
                     FontFamily="Century Gothic"
                     FontWeight="Normal"
                     FontSize="14"
                     Foreground="#0066C5"                           
                     Width="auto"
                     MinWidth="50"
                     Height="auto"
                     Margin="5"
                     Padding="5"
                     TextAlignment="Right"
                     VerticalAlignment="Center"
                     IsReadOnly="True"/>

            <TextBox Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="1"
                     Text="{Binding CurrentPop.CoubicadorFinal, Mode=OneWay}" 
                     materialDesign:HintAssist.Hint="Coubicador" 
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     DockPanel.Dock="Left" 
                     HorizontalAlignment="Stretch"
                     FontFamily="Century Gothic"
                     FontWeight="Normal"
                     FontSize="14"
                     Foreground="#0066C5"                           
                     Width="auto"
                     MinWidth="50"
                     Height="auto"
                     Margin="5"
                     Padding="5"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     IsReadOnly="True"/>

            <TextBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3"
                     Text="{Binding CurrentPop.NombreSitioCoubicante, Mode=OneWay}" 
                     materialDesign:HintAssist.Hint="Sitio Coubicante" 
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     DockPanel.Dock="Left" 
                     HorizontalAlignment="Stretch"
                     FontFamily="Century Gothic"
                     FontWeight="Normal"
                     FontSize="14"
                     Foreground="#0066C5"                           
                     Width="auto"
                     MinWidth="50"
                     Height="auto"
                     Margin="5"
                     Padding="5"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     IsReadOnly="True"/>

            <TextBox Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="1"
                     Text="{Binding CurrentPop.TipoEstacion, Mode=OneWay}" 
                     materialDesign:HintAssist.Hint="Tipo Estación" 
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     DockPanel.Dock="Left" 
                     HorizontalAlignment="Stretch"
                     FontFamily="Century Gothic"
                     FontWeight="Normal"
                     FontSize="14"
                     Foreground="#0066C5"                           
                     Width="auto"
                     MinWidth="50"
                     Height="auto"
                     Margin="5"
                     Padding="5"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     IsReadOnly="True"/>

            <TextBox Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="1"
                     Text="{Binding CurrentPop.TipoTorre, Mode=OneWay}" 
                     materialDesign:HintAssist.Hint="Tipo Torre" 
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     DockPanel.Dock="Left" 
                     HorizontalAlignment="Stretch"
                     FontFamily="Century Gothic"
                     FontWeight="Normal"
                     FontSize="14"
                     Foreground="#0066C5"                           
                     Width="auto"
                     MinWidth="50"
                     Height="auto"
                     Margin="5"
                     Padding="5"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     IsReadOnly="True"/>

            <TextBox Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="2"
                     Text="{Binding CurrentPop.UbicacionEquipos, Mode=OneWay}" 
                     materialDesign:HintAssist.Hint="Ubicación de equipos" 
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     DockPanel.Dock="Left" 
                     HorizontalAlignment="Stretch"
                     FontFamily="Century Gothic"
                     FontWeight="Normal"
                     FontSize="14"
                     Foreground="#0066C5"                           
                     Width="auto"
                     MinWidth="50"
                     Height="auto"
                     Margin="5"
                     Padding="5"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     IsReadOnly="True"/>
        </Grid>

        <Button Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Style="{DynamicResource MaterialDesignToolButton}"
                Command="{Binding GetAboutInfoCommand}" >
            <materialDesign:PackIcon Kind="About" Opacity=".56" />
        </Button>

    </Grid>
</Window>
